<!-- *****************************************************************************************************************
FLASH NOTICE
 ***************************************************************************************************************** -->

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% elsif flash[:warning] %>
  <div class="alert alert-danger"><%= flash[:warning] %></div>
<% else %>
<% end %>

