<br><br><br>
<div class="container-fluid">
  <div class="row-fluid" >
   <div class="col-md-offset-4 col-md-4" id="box">
    <h2>Sign Up</h2>

    <hr>

        <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', id: 'contact_form'} do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <div class="col-md-12">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <div class="field">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <div class="field">
              <% if @minimum_password_length %>
              <% end %>
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password (6 characters minimum)', class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password Confirmation', class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-success btn-block' %>
        </div>
        <% end %>

        <br>

        <%= link_to "Sign up with Facebook", user_facebook_omniauth_authorize_path, class: 'btn btn-primary btn-block' %>

        <br>

        <div class="form-group">
          <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-default btn-block' %><br />
          <% end -%>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end -%>
        </div>
      </div>
    </div>
</div>
